<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ParkingPaymentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--상단바-->
        <androidx.appcompat.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_left_arrow" />


        </androidx.appcompat.widget.Toolbar>

        <com.team.smart.customfonts.MyTextView_Roboto_Medium
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="주차비 결제 "
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <!--스크롤뷰안 전체 레이아웃-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <!--사진,차량정보-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="#FFFFFF"
                        android:paddingTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/carNumImg"
                            android:layout_width="200dp"
                            android:layout_height="130dp"
                            android:src="@drawable/carnum"
                            android:scaleType="fitXY"
                            android:layout_marginLeft="10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            >

                            <com.team.smart.customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="주차된 주차장"
                                android:layout_marginTop="2dp"
                                android:textColor="#6e6e6e"
                                android:textSize="10dp"/>

                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00가 0000"
                                android:textColor="#000"
                                android:textSize="18dp" />

                            <com.team.smart.customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="가산디지털단지역"
                                android:layout_marginTop="10dp"
                                android:textColor="#6e6e6e"
                                android:textSize="14dp"/>
                            <com.team.smart.customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="[월드벤처 2차]"
                                android:layout_marginTop="5dp"
                                android:textColor="#6e6e6e"
                                android:textSize="14dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!--입차정보-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:background="#ffffff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:paddingTop="10dp">

                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/propertyName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:text="[주차시간 정보]"
                                android:textColor="#000"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <!--입차시간-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="입차시간"
                                android:textColor="#000"
                                android:textSize="14dp" />
                            <com.team.smart.customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2019-08-13  13:25"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="7dp"
                                android:textColor="#A2A2A2"/>
                        </LinearLayout>

                        <!--주차시간-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="주차시간"
                                android:textColor="#000"
                                android:textSize="14dp" />
                            <com.team.smart.customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2시간 38분"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="7dp"
                                android:textColor="#2ebcff"/>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="#dddddd"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="주차권명"
                                android:paddingTop="10dp"
                                android:textSize="14dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="15dp"
                                android:textColor="@color/mainText"/>
                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="보유수량"
                                android:paddingTop="10dp"
                                android:textSize="14dp"
                                android:paddingBottom="10dp"
                                android:layout_centerInParent="true"
                                android:textColor="@color/mainText"/>

                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="사용적용"
                                android:paddingTop="10dp"
                                android:textSize="14dp"
                                android:paddingBottom="10dp"
                                android:layout_marginRight="30dp"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/mainText"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ListView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:textSize="14dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="10dp">
                            </ListView>

                            <ListView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:textSize="14dp"
                                android:paddingBottom="10dp"
                                android:layout_centerInParent="true">
                            </ListView>

                            <LinearLayout
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">

                                <EditText
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"
                                    android:hint="0"
                                    android:textAlignment="center"
                                    android:layout_marginTop="10dp"/>

                                <com.team.smart.customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="45dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/send_inq_rect"
                                    android:text="적용"
                                    android:textAlignment="center"
                                    android:textColor="#ffffff" />

                            </LinearLayout>


                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dddddd"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">
                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="결제 정보"
                                android:textColor="#000"
                                android:textSize="16dp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:text="주차 시간"
                                    android:textColor="#000"
                                    android:textSize="14dp"
                                    android:textAlignment="textEnd"/>

                                <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:text="2시간 38분"
                                    android:textColor="#000"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <!--주차권으로 결제된 시간-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:text="주차권 사용 시간"
                                    android:textColor="#2ebcff"
                                    android:textSize="14dp"

                                    android:textAlignment="textEnd"/>

                                <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:text="1시간"
                                    android:textColor="#000"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <!-- 나머지 결제 해야할 시간-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="남은 주차 시간"
                                    android:textColor="#000"
                                    android:textSize="14dp"
                                    android:textAlignment="textEnd"/>

                                <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="1시간 38분"
                                    android:textColor="#000"
                                    android:textSize="14dp" />
                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp">

                    </LinearLayout>
                    <View

                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#ffffff"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/totalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="결제 금액"
                                android:textColor="#000"
                                android:textSize="16dp"
                                />
                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="10dp"
                                android:text="3000원"
                                android:textColor="#000"
                                android:textSize="16dp"
                                android:layout_toRightOf="@id/totalText"
                                />
                        </RelativeLayout>


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

                <com.team.smart.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/paymentBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/send_inq_rect"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="결제"
                    android:textSize="18dp"
                    android:textColor="#ffffff" />

                <!--버튼-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="90dp">
                    <com.team.smart.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/subText"
                        android:textSize="14dp"
                        android:text="담당자"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/p3"
                            app:civ_border_color="#00000000"
                            app:civ_border_width="2dp"
                            android:layout_marginLeft="10dp"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp">
                            <com.team.smart.customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="월드벤처 주차관리사무소"
                                android:textSize="12dp"
                                android:textColor="#000"/>
                            <com.team.smart.customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/subText"
                                android:text="02-5465-4888"
                                />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_message"
                            android:layout_gravity="center_vertical"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_phone"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>