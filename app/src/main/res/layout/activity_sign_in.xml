<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/li_main"
    tools:context=".activity.SignInActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/eye_scan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.team.smart.customfonts.EditText_Roboto_Regular
                android:id="@+id/tv_userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="아이디"
                android:layout_weight="1"
                android:inputType="textUri"
                android:textColor="#000"
                android:background="#00000000"
                android:textColorHint="#A2A2A2"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_user" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="#acacac" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.team.smart.customfonts.EditText_Roboto_Regular
                android:id="@+id/tv_userpw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:textColor="#000"
                android:layout_weight="1"
                android:background="#00000000"
                android:textColorHint="#A2A2A2"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_eye" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="#acacac" />

        <!--프로그레스바-->
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:visibility="gone"
            android:indeterminateDrawable="@drawable/progressbar"/>

        <com.team.smart.customfonts.MyTextView_Roboto_Medium
            android:id="@+id/btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/signin_rect"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="90dp"
            android:paddingRight="90dp"
            android:paddingTop="12dp"
            android:text="로그인"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <com.team.smart.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/btnSingUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up Now!"
            android:textColor="#377dff"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_marginTop="100dp" />
    </LinearLayout>
</LinearLayout>
