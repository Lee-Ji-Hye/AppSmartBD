<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/tv_food_cart_fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="자반구이 백반 (된장찌개포함)"
                android:textColor="#000"
                android:textSize="16dp" />

            <Button
                android:id="@+id/tv_food_cart_delbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:textColor="#2bccfe"
                android:text="삭제"
                android:background="#fff"
                android:stateListAnimator="@null"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_food_cart_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="- 기본 : 7,000원"/>

        <TextView
            android:id="@+id/tv_food_cart_defprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#000"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="15dp"
            android:text="14,000원"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <EditText
                android:id="@+id/bt_minusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/stroke_top_bottom"
                android:clickable="true"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="─"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_food_cart_cnt"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_top_bottom"
                android:clickable="true"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="1"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/bt_plusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_top_bottom"
                android:clickable="true"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="+"
                android:textSize="22dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"/>

    </LinearLayout>
</LinearLayout>