<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.FoodOrderChkActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:background="@null"
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back_black_2"
            android:tint="@android:color/white"/>

        <TextView
            android:text="주문 조회"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

    </RelativeLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/eye_scan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비회원으로 주문하셨나요?"
            android:gravity="center"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주문 내역 조회를 위해 고객 확인이 필요합니다."
            android:gravity="center"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.team.smart.customfonts.EditText_Roboto_Regular
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="주문자 성명"
                android:layout_weight="1"
                android:inputType="textUri"
                android:textColor="#000"
                android:background="#00000000"
                android:textColorHint="#A2A2A2"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="#acacac" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.team.smart.customfonts.EditText_Roboto_Regular
                android:id="@+id/tv_orderCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="주문번호"
                android:inputType="text"
                android:textColor="#000"
                android:layout_weight="1"
                android:background="#00000000"
                android:textColorHint="#A2A2A2"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="#acacac" />

        <com.team.smart.customfonts.MyTextView_Roboto_Medium
            android:id="@+id/btnOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/signin_rect"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="90dp"
            android:paddingRight="90dp"
            android:paddingTop="12dp"
            android:text="확인"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <com.team.smart.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/btnSingUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In Now"
            android:textColor="#377dff"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_marginTop="100dp" />
    </LinearLayout>
</LinearLayout>
