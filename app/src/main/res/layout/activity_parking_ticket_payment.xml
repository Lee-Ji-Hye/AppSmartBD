<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ParkingPaymentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--상단바-->
        <androidx.appcompat.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_left_arrow" />


        </androidx.appcompat.widget.Toolbar>

        <com.team.smart.customfonts.MyTextView_Roboto_Medium
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="주차권 구매"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <!--스크롤뷰안 전체 레이아웃-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <!--주차권 정보-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:background="#ffffff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:paddingTop="10dp"
                            android:orientation="horizontal">

                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/b_nameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="건물이름"
                                android:textColor="#000"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <!--입차시간-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/t_nameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="시간권[3시간]/승용소형"
                                android:textColor="#000"
                                android:textSize="14dp" />
                        </LinearLayout>



                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="#dddddd"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="구매자 정보"
                                android:paddingTop="10dp"
                                android:textSize="14dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="15dp"
                                android:textColor="@color/mainText"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="이름"
                                    android:paddingTop="10dp"
                                    android:textSize="14dp"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="15dp"
                                    android:textColor="@color/mainText"/>
                                <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                    android:id="@+id/nameTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="김 00"
                                    android:paddingTop="10dp"
                                    android:textSize="14dp"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="15dp"
                                    android:textColor="@color/mainText"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="연락처"
                                    android:paddingTop="10dp"
                                    android:textSize="14dp"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="15dp"
                                    android:textColor="@color/mainText"/>
                                <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                    android:id="@+id/hpTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="010-0000-0000"
                                    android:paddingTop="10dp"
                                    android:textSize="14dp"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="15dp"
                                    android:textColor="@color/mainText"/>
                            </LinearLayout>


                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dddddd"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">
                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="결제 정보"
                                android:textColor="#000"
                                android:textSize="16dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:text="가격"
                                    android:textColor="#000"
                                    android:textSize="14dp"
                                    android:textAlignment="center"/>

                                <LinearLayout
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal">
                                    <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                        android:id="@+id/priceTV"
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        android:text="가격"
                                        android:textColor="#000"
                                        android:textSize="14dp"
                                        android:textAlignment="center"/>

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:text="구매 갯수"
                                    android:textColor="#000"
                                    android:textSize="14dp"
                                    android:textAlignment="center"/>

                                <LinearLayout
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/countEdit"
                                        android:layout_width="50dp"
                                        android:layout_height="40dp"
                                        android:hint="0"
                                        android:textAlignment="center"
                                        android:layout_marginTop="10dp"
                                        android:inputType="number"/>

                                    <com.team.smart.customfonts.MyTextView_Roboto_Regular
                                        android:id="@+id/p_countBtn"
                                        android:layout_width="45dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="5dp"
                                        android:background="@drawable/send_inq_rect"
                                        android:text="적용"
                                        android:textAlignment="center"
                                        android:textColor="#ffffff" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp">

                    </LinearLayout>
                    <View

                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#ffffff"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/totalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="결제 금액"
                                android:textColor="#000"
                                android:textSize="16dp"
                                />
                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/totalPriceTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="10dp"
                                android:text="3000원"
                                android:textColor="#000"
                                android:textSize="16dp"
                                android:layout_toRightOf="@id/totalText"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:id="@+id/payTypeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="결제 수단"
                                android:textColor="#000"
                                android:textSize="16dp"
                                />
                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/payTypeTv"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="6dp">
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    />
                            </RadioGroup>

                            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="75dp"
                                android:layout_marginTop="10dp"
                                android:text="카카오페이"
                                android:textColor="#000"
                                android:textSize="16dp"
                                android:layout_toRightOf="@id/payTypeTv"
                                />
                        </RelativeLayout>


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

                <com.team.smart.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/paymentBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/send_inq_rect"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="결제"
                    android:textSize="18dp"
                    android:textColor="#ffffff" />

                <!--버튼-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="90dp">
                    <com.team.smart.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/subText"
                        android:textSize="14dp"
                        android:text="담당자"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/p3"
                            app:civ_border_color="#00000000"
                            app:civ_border_width="2dp"
                            android:layout_marginLeft="10dp"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp">
                            <com.team.smart.customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="월드벤처 주차관리사무소"
                                android:textSize="12dp"
                                android:textColor="#000"/>
                            <com.team.smart.customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/subText"
                                android:text="02-5465-4888"
                                />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_message"
                            android:layout_gravity="center_vertical"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_phone"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>