<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="80dp"
        android:background="@drawable/box_border"
        >
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/send_inq_rect"/>
        <com.team.smart.customfonts.MyTextView_Roboto_Medium
            android:id="@+id/hourText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="타입 "
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="18dp" />

        <com.team.smart.customfonts.MyTextView_Roboto_Medium
            android:id="@+id/hourlyTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="시간"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/hourText"
            android:textColor="#000"
            android:textSize="18dp" />


        <com.team.smart.customfonts.MyTextView_Roboto_Medium
            android:id="@+id/priceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/wonText"
            android:text="3000"
            android:textColor="#000"
            android:textSize="18dp" />

        <com.team.smart.customfonts.MyTextView_Roboto_Medium
            android:id="@+id/wonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:text="원"
            android:textColor="#000"
            android:textSize="18dp" />
    </RelativeLayout>
</LinearLayout>
