<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/b_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월드벤처 2차 ["
                android:paddingTop="10dp"
                android:textSize="16dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:textColor="@color/mainText"/>
            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/hourly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:paddingTop="10dp"
                android:textSize="16dp"
                android:paddingBottom="5dp"
                android:layout_toRightOf="@+id/b_name"
                android:textColor="@color/mainText"/>
            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간]"
                android:paddingTop="10dp"
                android:textSize="16dp"
                android:paddingBottom="5dp"
                android:layout_toRightOf="@+id/hourly"
                android:textColor="@color/mainText"/>
            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[가산디지털단지역]"
                android:textSize="12dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:layout_below="@+id/b_name"
                android:textColor="@color/mainText"/>

            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="18dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="18dp"
                android:layout_toLeftOf="@+id/jang"
                android:layout_centerHorizontal="true"
                android:textColor="@color/mainText"/>
            <com.team.smart.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/jang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장"
                android:textSize="18dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/mainText"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#dddddd"/>
    </LinearLayout>
</LinearLayout>
